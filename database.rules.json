{
  "rules": {
    "boards": {
      "$board_id": {
        "board": {
          ".read": "auth.uid !== null",
          ".write": "auth.token.email_verified === true"
        },

        "columns": {
          ".read": "auth.uid !== null",
          ".write": "auth.uid !== null"
        },

        "items": {
          ".read": "auth.uid !== null",
          ".write": "auth.uid !== null"
        },

        "likes": {
          ".read": "auth.uid !== null",
          ".write": "auth.uid !== null"
        }
      }
    },

    "users": {
      "$uid": {
        ".read": "$uid === auth.uid && auth.token.email_verified === true",
        ".write": "$uid === auth.uid && auth.token.email_verified === true"
      }
    }
  }
}
